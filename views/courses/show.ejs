<%- include('../../partials/header.ejs')%>
<section id="course_details">
  <h1><%= course.title %></h1>
  <p><%= course.description %></p>

  <h2>Lessons</h2>
  <ul>
    <% course.lessons.forEach(lesson => { %>
      <li><a href="/lessons/<%= lesson._id %>"><%= lesson.title %></a></li>
    <% }) %>
  </ul>
  <a href="/lessons/create?courseId=<%= course._id %>">Add Lesson</a>

  <a href="/courses/">Back to Courses</a>
</section>




